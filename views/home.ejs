<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Pinterest Clone</title>

    <!-- Bootstrap -->
   
		<link href="assets/style.css" type="text/css" rel="stylesheet" />
   
</head>

<body class="d-flex flex-column h-100">

  <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top d-flex justify-content-between">
  <a class="navbar-brand" href="#">Pintrest Clone</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse  d-flex justify-content-end" id="navbar">
      <ul class="navbar-nav ">
           <li class="nav-item">
        <% if(!user){ %>
            <a class="nav-link" href="/login">Login </a>
         <%} else{ %>
            <a class="nav-link" href="/profile"><%= user.username %></a>
        <%}%>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/">Home</a>
        </li>
   
       
      </ul>
   
  </div>
</nav>

<main role="main" class="container">

  <div class="row">
   <div class="col-md-12">
   <% for(var i=0;i<images.length;i++){ %>
    <% var liked = ""; %>
    <% if(user){if(images[i].likedBy.includes(user.username)){ liked = "red" }} %>
   <figure class="thumbnail home">
   
      <img src="<%= images[i].imageLink %>" class="img-thumbnail" alt="<%= images[i].title %>">
        <figcaption>
            <div class="user">
              <h4> <%= images[i].title %> </h4>
              <p><%= images[i].username %></p>
            </div>
            <p class="likes">
              <i id="<%= images[i]._id%>" class="far fa-heart <%= liked %>"></i>
              <i id="<%= images[i]._id%>" class="far fa-bookmark"></i>
              <%= images[i].likes %>
            </p>
        </figcaption>
  </figure>
   <% } %>
</div>
   
</div>
 

</main>
<script>
$(function(){
  $(".fa-bookmark").click(function(e){
     $.ajax({
      url:"/save",
      type:"POST",
      data:{
              id:$(this).attr('id')
           },
      complete:window.location.assign("/profile")
    })
  })
  $(".fa-heart").click(function(e){
    $.ajax({
      url:"/like",
      type:"POST",
      data:{
              id:$(this).attr('id')
           },
      complete:window.location.assign("/")
    })
  })
})

</script>
 


    
</body>
</html>
